<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mod7Exer1.View.ViewEmployee"
             Title="ViewEmployee"
             BackgroundColor="#e0f7e6">
    <!-- Light green background -->
    <VerticalStackLayout BackgroundColor="#c8e6c9">
        <!-- Slightly darker green -->
        <Label 
            Text="Personal Information"
            FontSize="20"
            HorizontalOptions="Center"
            TextColor="#2e7d32"/>
        <!-- Dark green text color -->

        <ListView ItemsSource="{Binding EmployeeList}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding EmployeeID}" TextColor="#1b5e20"/>
                        <Label Text="{Binding Name}" TextColor="#1b5e20"/>
                        <Label Text="{Binding Address}" TextColor="#1b5e20"/>
                        <Label Text="{Binding email}" TextColor="#1b5e20"/>
                        <Label Text="{Binding ContactNo}" TextColor="#1b5e20"/>
                    </StackLayout>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Load Data" Command="{Binding LoadDataCommand}" 
                BackgroundColor="#4caf50" TextColor="White"/>
        <!-- Green button -->

        <Label x:Name="ConnectionStatusLabel" 
               Text="{Binding StatusMessage}"
               FontSize="18"
               HorizontalOptions="Center"
               TextColor="#2e7d32"/>
        <!-- Dark green text color -->

    </VerticalStackLayout>
</ContentPage>
